<Window x:Class="ArkanoidWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkanoidWPF"
        mc:Ignorable="d"
        Title="Арканоид" 
        Height="700" Width="900"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Игровое поле -->
        <Border Grid.Column="0" Background="Black" Margin="10">
            <Canvas x:Name="GameCanvas" Background="Black"/>
        </Border>

        <!-- Панель управления и информации -->
        <Border Grid.Column="1" Background="#2C2C2C" Padding="10">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="АРКАНОИД" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <!-- Информация о игре -->
                <Border Background="#3C3C3C" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ИНФОРМАЦИЯ" 
                                  Foreground="LightGray" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Мяч: " Foreground="White" Width="80"/>
                            <TextBlock x:Name="BallInfo" Text="(0, 0)" Foreground="Yellow"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Платформа: " Foreground="White" Width="80"/>
                            <TextBlock x:Name="PaddleInfo" Text="(0, 0)" Foreground="Cyan"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Кирпичи: " Foreground="White" Width="80"/>
                            <TextBlock x:Name="BricksInfo" Text="0" Foreground="LightGreen"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Бонусы: " Foreground="White" Width="80"/>
                            <TextBlock x:Name="LootsInfo" Text="0" Foreground="Orange"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Управление -->
                <Border Background="#3C3C3C" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="УПРАВЛЕНИЕ" 
                                  Foreground="LightGray" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <Rectangle Width="20" Height="20" Fill="Gray" Margin="0,0,5,0"/>
                            <TextBlock Text="← A / Стрелка влево" Foreground="White"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <Rectangle Width="20" Height="20" Fill="Gray" Margin="0,0,5,0"/>
                            <TextBlock Text="→ D / Стрелка вправо" Foreground="White"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <Rectangle Width="20" Height="20" Fill="Gray" Margin="0,0,5,0"/>
                            <TextBlock Text="S - Сохранить" Foreground="White"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <Rectangle Width="20" Height="20" Fill="Gray" Margin="0,0,5,0"/>
                            <TextBlock Text="R - Новая игра" Foreground="White"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <Rectangle Width="20" Height="20" Fill="Gray" Margin="0,0,5,0"/>
                            <TextBlock Text="P - Пауза" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Кнопки управления -->
                <StackPanel Margin="0,10,0,0">
                    <Button x:Name="BtnPause" Content="Пауза (P)" 
                           Click="BtnPause_Click"
                           Background="#4CAF50"
                           Foreground="White"
                           FontWeight="Bold"
                           Height="30"
                           Margin="0,5"/>

                    <Button x:Name="BtnNewGame" Content="Новая игра (R)" 
                           Click="BtnNewGame_Click"
                           Background="#2196F3"
                           Foreground="White"
                           FontWeight="Bold"
                           Height="30"
                           Margin="0,5"/>

                    <Button x:Name="BtnSave" Content="Сохранить (S)" 
                           Click="BtnSave_Click"
                           Background="#FF9800"
                           Foreground="White"
                           FontWeight="Bold"
                           Height="30"
                           Margin="0,5"/>

                    <Button x:Name="BtnLoad" Content="Загрузить" 
                           Click="BtnLoad_Click"
                           Background="#9C27B0"
                           Foreground="White"
                           FontWeight="Bold"
                           Height="30"
                           Margin="0,5"/>
                </StackPanel>

                <!-- Статус -->
                <Border Background="#3C3C3C" Padding="10" CornerRadius="5" Margin="0,10,0,0">
                    <TextBlock x:Name="StatusText" 
                              Text="Игра запущена" 
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>